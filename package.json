{
  "name": "eas-cli-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:tarballs:linux": "bun run build-for-size-check",
    "build-for-size-check": "bun run build && lerna run pretarball-ci --scope eas-cli && CLI_SIZE_CHECK=1 lerna exec --scope eas-cli -- oclif pack:tarballs --no-xz --targets linux-x64",
    "typecheck": "lerna run typecheck",
    "start": "lerna run watch --stream --parallel",
    "start-allow-unused": "lerna run watch-allow-unused --stream --parallel",
    "watch": "bun run start",
    "eas": "packages/eas-cli/bin/run",
    "lint": "eslint .",
    "lint-changelog": "./scripts/bin/run lint-changelog",
    "release": "lerna run rebuild && ./scripts/bin/run release",
    "test": "lerna run test",
    "clean": "lerna run clean && rm -rf node_modules coverage"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/node": "20.14.8",
    "eslint": "8.56.0",
    "eslint-config-universe": "13.0.0",
    "eslint-plugin-async-protect": "3.1.0",
    "eslint-plugin-node": "11.1.0",
    "jest": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "lerna": "9.0.3",
    "oclif": "^3.9.0",
    "prettier": "3.1.1",
    "ts-jest": "29.1.1",
    "typescript": "5.5.4"
  }
}
