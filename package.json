{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build",
    "build:tarballs:linux": "yarn build && yarn workspace eas-cli oclif-dev pack --targets linux-x64",
    "typecheck": "lerna run typecheck",
    "start": "lerna run watch --parallel",
    "watch": "yarn start",
    "eas": "packages/eas-cli/bin/run",
    "lint": "eslint .",
    "release": "./scripts/bin/run update-local-plugin && lerna version",
    "test": "jest",
    "clean": "lerna run clean && rm -rf node_modules coverage"
  },
  "devDependencies": {
    "@expo/oclif-dev-cli": "1.24.0-expo",
    "@types/jest": "27.0.1",
    "@types/node": "16.7.8",
    "eslint": "7.32.0",
    "eslint-config-universe": "8.0.0",
    "eslint-plugin-async-protect": "1.1.0",
    "eslint-plugin-node": "11.1.0",
    "jest": "27.1.0",
    "jest-watch-typeahead": "0.6.4",
    "lerna": "4.0.0",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2"
  },
  "volta": {
    "node": "16.10.0",
    "yarn": "1.22.15"
  }
}
