{
  "extends": ["../../.oxlintrc.json"],
  "jsPlugins": [
    {
      "name": "async-protect",
      "specifier": "eslint-plugin-async-protect"
    },
    {
      "name": "eslint-import",
      "specifier": "eslint-plugin-import"
    },
    {
      "name": "graphql",
      "specifier": "eslint-plugin-graphql"
    }
  ],
  "rules": {
    "no-restricted-properties": [
      "warn",
      {
        "object": "it",
        "property": "only",
        "message": "it.only should not be committed to main."
      },
      {
        "object": "test",
        "property": "only",
        "message": "test.only should not be committed to main."
      },
      {
        "object": "describe",
        "property": "only",
        "message": "describe.only should not be committed to main."
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "lodash",
            "message": "Don't use lodash, it's heavy!"
          },
          {
            "name": "ora",
            "message": "Import ora from src/ora.ts instead."
          }
        ]
      }
    ],
    "graphql/template-strings": [
      "error",
      {
        "env": "apollo",
        "schemaJsonFilepath": "packages/eas-cli/graphql.schema.json"
      }
    ],
    "graphql/named-operations": [
      "error",
      {
        "schemaJsonFilepath": "packages/eas-cli/graphql.schema.json"
      }
    ],
    "graphql/required-fields": [
      "error",
      {
        "env": "apollo",
        "schemaJsonFilepath": "packages/eas-cli/graphql.schema.json",
        "requiredFields": ["id"]
      }
    ],
    "graphql/capitalized-type-name": [
      "error",
      {
        "schemaJsonFilepath": "packages/eas-cli/graphql.schema.json"
      }
    ]
  }
}
