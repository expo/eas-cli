{
  "compilerOptions": {
    "declaration": true,
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": [
      "../../node_modules/@types",
      "../../ts-declarations",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"]
}
