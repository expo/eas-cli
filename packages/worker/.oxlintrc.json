{
  "extends": ["../../.oxlintrc.json"],
  "jsPlugins": [
    {
      "name": "async-protect",
      "specifier": "eslint-plugin-async-protect"
    },
    {
      "name": "eslint-import",
      "specifier": "eslint-plugin-import"
    }
  ],
  "rules": {
    "async-protect/async-suffix": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["__typename", "__WORKFLOW_JOB_ID"],
        "allowAfterThis": true
      }
    ],
    "eslint-import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/__integration__/**/*", "**/__unit__/**/*", "**/__mocks__/**/*"]
      }
    ],
    "node/no-sync": "off"
  },
  "overrides": [
    {
      "files": ["*.test.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
