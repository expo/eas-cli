{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/fixtures/my-custom-ts-function/**/*"]
}
