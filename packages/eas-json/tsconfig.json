{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2021",
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": ["../../node_modules/@types", "../../ts-declarations", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
