{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["import", "node", "typescript"],
  "jsPlugins": [
    {
      "name": "async-protect",
      "specifier": "eslint-plugin-async-protect"
    },
    {
      "name": "eslint-import",
      "specifier": "eslint-plugin-import"
    }
  ],
  "rules": {
    "no-console": "warn",
    "no-constant-condition": ["warn", { "checkLoops": false }],
    "sort-imports": ["warn", { "ignoreDeclarationSort": true }],
    "curly": "warn",
    "import/no-cycle": "error",
    "eslint-import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/jest/**/*",
          "**/__tests__/**/*",
          "**/__mocks__/**/*",
          "**/__integration-tests__/**/*"
        ]
      }
    ],
    "eslint-import/no-relative-packages": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "lodash",
            "message": "Don't use lodash, it's heavy!"
          }
        ]
      }
    ],
    "no-underscore-dangle": ["error", { "allow": ["__typename"] }],
    "async-protect/async-suffix": "error",
    "node/no-sync": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.ts", "**/__mocks__/**/*.ts"],
      "rules": {
        "async-protect/async-suffix": "off"
      }
    }
  ]
}
